<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/mBlack</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/robotoflex</item>
    </style>

    <style name="WhiteAccent" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@android:color/white</item>
        <item name="fontFamily">@font/robotoflex</item>
    </style>

    <style name="WrapMatchContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="NavigationView" parent="Base.Theme.AppCompat">
        <item name="android:listDivider">@color/miWhite</item>
        <item name="iconTint">@color/colorPrimary</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="CustomEditTextLight" parent="WrapMatchContent">
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--DIALOGS-->
    <style name="DialogTitleStyle">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textColor">@color/mBlack</item>
        <item name="android:textSize">@dimen/text_large_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">@font/robotoflex</item>
    </style>

    <style name="DialogMessageStyle">
        <item name="android:layout_marginTop">@dimen/margin_large_size</item>
        <item name="android:layout_marginRight">@dimen/margin_large_size</item>
        <item name="android:layout_marginLeft">@dimen/margin_large_size</item>
        <item name="android:textColor">@color/mBlack</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/miWhite</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Base.Widget.MaterialComponents.TextInputEditTextt" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="MyPopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">-4dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>

    <style name="AnimationsForDialog">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/mTurqoise</item>
        <item name="colorAccent">@color/mTurqoise</item>
        <item name="colorPrimary">@color/mTurqoise</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/miWhite</item>
    </style>

    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

