<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardFree"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/dialog_expired_back"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout18"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_large_medium"
                android:layout_marginTop="@dimen/margin_large_medium"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_freeTrial"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="@dimen/margin_large_medium"
                    android:src="@drawable/ic_info_list"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtFreeTrial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineHeight="@dimen/text_medium_size_16"
                    android:letterSpacing="0.03"
                    android:textSize="@dimen/text_xsmall_size"
                    android:text="@string/free_trail_zonas"
                    android:textAlignment="textStart"
                    android:textColor="@color/card_list_freetrail_txt" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/actualizarAhora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ButtonAdmin2"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="@dimen/margin_large_medium"
                android:layout_marginHorizontal="16dp"
                android:lineHeight="@dimen/text_medium_size_16"
                android:padding="8dp"
                android:text="@string/cardview_botton"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_xsmall_size" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>