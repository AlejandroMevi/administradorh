<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ui.fragments.AuditHistory.ET030Fragment">

    <Button
        android:id="@+id/btnBackET030"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scrollET030"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/detailsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="26dp"
                android:text="@string/details_audit_label_detalle"
                android:textColor="@color/secondaryColor"
                android:textSize="@dimen/text_xlarge_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/details_audit_label_fallido"
                android:textColor="@color/redvsm"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailsText" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/usernameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:autoSizeMinTextSize="18sp"
                android:gravity="center"
                android:maxLines="4"
                android:text="Ana Paula Rojas Ruiz"
                android:textColor="@color/mTurqoise"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/movText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin8"
                android:text="Entrada 11/03/2021 08:30:57"
                android:textColor="@color/secondaryColor"
                android:textSize="22sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/usernameText" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textView5"
                style="@style/Body1_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="@dimen/margin16"
                android:text="@string/details_audit_company"
                android:textColor="@color/secondaryColor"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/movText" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/idNumCompany"
                style="@style/Caption_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="@color/numEmployee"
                app:layout_constraintBottom_toBottomOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="@+id/idNumEmp"
                app:layout_constraintTop_toTopOf="@+id/textView5" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textView6"
                style="@style/Body1_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin8"
                android:text="@string/details_audit_employee"
                android:textColor="@color/secondaryColor"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dateCheck"
                style="@style/Body1_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin8"
                android:text="@string/details_audit_date_check"
                android:textColor="@color/secondaryColor"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtDateCheck"
                style="@style/Caption_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="11/03/2021 08:30:57"
                android:textColor="@color/numEmployee"
                app:layout_constraintStart_toStartOf="@+id/idNumEmp"
                app:layout_constraintTop_toTopOf="@+id/dateCheck" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/idNumEmp"
                style="@style/Caption_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:text="12"
                android:textColor="@color/numEmployee"
                app:layout_constraintBottom_toBottomOf="@+id/textView6"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="@+id/textView6" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtET"
                style="@style/Body1_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin16"
                android:text="ET030 :"
                android:textColor="@color/secondaryColor"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/dateCheck"
                app:layout_constraintTop_toBottomOf="@+id/txtDevice" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtCodigo"
                style="@style/Caption_Regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:maxLines="2"
                android:text="Zona de marcaje Bluettoth y GPS incorrectas"
                android:textColor="@color/numEmployee"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/device"
                app:layout_constraintTop_toTopOf="@+id/txtET" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtDevice"
                style="@style/Body1_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin8"
                android:text="@string/dispositivo"
                android:textColor="@color/secondaryColor"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/dateCheck" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/device"
                style="@style/Caption_Regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:maxLines="2"
                android:text="$Xiaomi Redmi Note 9S/ee646185408b7963"
                android:textColor="@color/numEmployee"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/idNumEmp"
                app:layout_constraintTop_toTopOf="@+id/txtDevice" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgBeacon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/margin8"
                android:src="@drawable/ic_beacon"
                app:layout_constraintStart_toStartOf="@+id/txtET"
                app:layout_constraintTop_toBottomOf="@+id/txtET" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtBeaconsCheck"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin16"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/secondaryColor"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/imgBeacon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.122"
                app:layout_constraintStart_toEndOf="@+id/imgBeacon"
                app:layout_constraintTop_toBottomOf="@+id/txtET"
                app:layout_constraintVertical_bias="0.437" />

            <LinearLayout
                android:id="@+id/frameMapsEdit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgBeacon">

                <FrameLayout
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp">

                    <fragment
                        android:id="@+id/mapDetails"
                        class="com.venturessoft.human.views.ui.fragments.Stations.WorkaroundMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:context=".views.ui.fragments.Stations.EditStationsFragment" />

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:src="@mipmap/markerventures"
                        android:visibility="gone" />
                </FrameLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>