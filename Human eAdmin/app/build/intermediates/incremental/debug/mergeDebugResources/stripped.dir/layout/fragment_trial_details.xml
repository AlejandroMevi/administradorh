<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:padding="16dp"
    android:id="@+id/navigation"
    tools:context=".views.ui.fragments.welcome.TrialDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/modal_1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/trialdetails_bienvenido"
            android:textSize="18sp"
            android:textFontWeight="600"
            android:lineHeight="24px"
            android:textColor="#405B75"
            app:layout_constraintTop_toBottomOf="@+id/appCompatImageView2" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/human_etime"
            android:tint="@color/mBlack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/freetrial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_trial"
            app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appCompatImageView" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="16sp"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:textColor="#405B75"
            android:text="@string/trialdetails_disfruta"
            app:layout_constraintTop_toBottomOf="@+id/freetrial" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@drawable/shape_card_green"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.02"
                    android:textColor="#405B75"
                    android:textStyle="bold"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/trialdetails_obten"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textColor="#405B75"
                    android:text="@string/trialdetails_despues"
                    android:textSize="12sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trialdetails_en_quince"
            android:textSize="14sp"
            android:textColor="#405B75"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView3" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icator1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_circle"
            android:tint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textindicator1" />

        <TextView
            android:id="@+id/textindicator1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:paddingVertical="2.5dp"
            android:textColor="#405B75"
            android:lineSpacingExtra="2sp"
            android:alpha="0.87"
            android:text="@string/trialdetails_registro_de"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icator1"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_circle"
            android:tint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textindicator2" />

        <TextView
            android:id="@+id/textindicator2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:paddingVertical="2.5dp"
            android:textColor="#405B75"
            android:lineSpacingExtra="2sp"
            android:alpha="0.87"
            android:text="@string/trialdetails_ia"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icator2"
            app:layout_constraintTop_toBottomOf="@+id/textindicator1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icator3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_circle"
            android:tint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textindicator3" />

        <TextView
            android:id="@+id/textindicator3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:paddingVertical="2.5dp"
            android:textColor="#405B75"
            android:lineSpacingExtra="2sp"
            android:alpha="0.87"
            android:text="@string/trialdetails_ubicacion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icator3"
            app:layout_constraintTop_toBottomOf="@+id/textindicator2" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icator4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_circle"
            android:tint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textindicator4" />

        <TextView
            android:id="@+id/textindicator4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="#405B75"
            android:paddingVertical="2.5dp"
            android:lineSpacingExtra="2sp"
            android:alpha="0.87"
            android:text="@string/trialdetails_descarga"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icator4"
            app:layout_constraintTop_toBottomOf="@+id/textindicator3" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp"
            app:cardBackgroundColor="#E8EEF8"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/textindicator4"
            tools:layout_editor_absoluteX="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="center_vertical"
                    android:text="@string/trialdetails_acceso_a"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#405B75"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icator5"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@drawable/circle_selected"
                    android:tint="@color/purple"
                    app:layout_constraintBottom_toBottomOf="@+id/textindicator5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textindicator5" />

                <TextView
                    android:id="@+id/textindicator5"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/trialdetails_registro_de_10"
                    android:textSize="14sp"
                    android:textColor="#405B75"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/icator5"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icator6"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@drawable/circle_selected"
                    android:tint="@color/purple"
                    app:layout_constraintBottom_toBottomOf="@+id/textindicator6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textindicator6" />

                <TextView
                    android:id="@+id/textindicator6"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:textColor="#405B75"
                    android:text="@string/trialdetails_confi_1_zona"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/icator6"
                    app:layout_constraintTop_toBottomOf="@+id/textindicator5" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icatorZona"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@drawable/circle_selected"
                    android:tint="@color/purple"
                    app:layout_constraintBottom_toBottomOf="@+id/textindicatorZona"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textindicatorZona" />

                <TextView
                    android:id="@+id/textindicatorZona"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:textColor="#405B75"
                    android:text="@string/trialdetails_confi_5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/icator6"
                    app:layout_constraintTop_toBottomOf="@+id/textindicator6" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icator7"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@drawable/circle_selected"
                    android:tint="@color/purple"
                    app:layout_constraintBottom_toBottomOf="@+id/textindicator7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textindicator7" />

                <TextView
                    android:id="@+id/textindicator7"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/trialdetails_15_dias_gratis"
                    android:textColor="#405B75"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/icator7"
                    app:layout_constraintTop_toBottomOf="@+id/textindicatorZona" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginVertical="24dp"
            android:backgroundTint="@color/mTurqoise"
            android:text="@string/trialdetails_comenzar_mi_prueba"
            android:textAllCaps="false"
            android:textColor="@color/miWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/trialdetails_renovacion_manua"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:textColor="#ABB8C3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_close" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>