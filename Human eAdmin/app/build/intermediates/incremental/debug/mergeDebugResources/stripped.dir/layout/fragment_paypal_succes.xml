<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/miWhite"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.ui.fragments.paypal.PaypalSuccesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/modal_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:textStyle="bold"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="3sp"
            android:text="@string/paypal_success_actualizacion"
            android:textColor="#10568B"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/appCompatImageView2"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/textindicator10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="2sp"
            android:text="@string/paypal_success_num_confirmacion"
            android:textColor="#7E90A0"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/textView_1"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/textFolio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="003754"
            android:textColor="#405B75"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textindicator10"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/textView_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="3sp"
            android:text="@string/paypal_success_volver_iniciar"
            android:textColor="#10568B"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textFolio"
            tools:layout_editor_absoluteX="16dp" />

        <Button
            android:id="@+id/btn_acept"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/mTurqoise"
            android:text="@string/paypal_success_entendido"
            android:layout_marginTop="40dp"
            android:textAllCaps="false"
            android:textColor="@color/miWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_2"
            tools:layout_editor_absoluteX="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>